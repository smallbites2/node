extends layout.pug

block head
  title home - smallbites
  style.
    .cards {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }

    .cards > a {
      border: 1px solid;
      border-radius: 5px;
      padding: 10px;
      margin: 10px;
      text-align: center;
      cursor: pointer;
      color: inherit;
      text-decoration: none;
    }

    .c {
      display: flex;
      justify-content: center;
      gap: 1rem;
    }

block content
  h1= __('title.welcome')
  p choose a random recipe below, or look for many more with the link above
  // p= JSON.stringify(foods)
  .cards
    each food in foods
      a(href=`/food/${food.id}`)
        p= food.title
        .c
          span Prep: #{ food.prep_time }
          span Cook: #{ food.cook_time }
          span Calories: #{ food.calories.toFixed(0) }
