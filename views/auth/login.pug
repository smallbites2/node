extends ../layout.pug

block head
  title= __('title.auth.login')
  style
    include ../styles/form.css
    if error
      include ../styles/banners/red.css
    if success
      include ../styles/banners/green.css

block content
  form(action='/login', method='POST')
    if error
      p.banner-red= error
    if success
      p.banner-green= success
    input#username(type='text', name='username', placeholder=__('auth.login.username'))
    input#password(type='password', name='password', placeholder=__('auth.login.password'))
    input(type='submit', value=__('auth.login.submit'))
